<h1>Editing comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <% if @comment.title != '[replay]' %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <% end %>
  
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit '更新' %>
  </p>
<% end %>
  
<%= link_to '返回', :action => 'index', :id => @comment.cinema_id %>